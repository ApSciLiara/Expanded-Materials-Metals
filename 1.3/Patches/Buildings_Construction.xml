<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Power Conduits are made of Copper -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "PowerConduit"]/costList</xpath>
		<value>
			<costList>
			  <VMEu_Copper>1</VMEu_Copper>
			</costList>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "WaterproofConduit"]/costList</xpath>
		<value>
			<costList>
			  <VMEu_Copper>8</VMEu_Copper>
			  <Steel>2</Steel>
			</costList>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "PowerSwitch"]/costList</xpath>
		<value>
			<costList>
			  <Steel>10</Steel>
			  <VMEu_Copper>5</VMEu_Copper>
			  <ComponentIndustrial>1</ComponentIndustrial>
			</costList>
		</value>
	</Operation>
	
	<!-- Batteries Use Lithium -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName = "Battery"]/costList</xpath>
