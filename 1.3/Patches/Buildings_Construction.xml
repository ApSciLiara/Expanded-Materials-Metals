			<costList>
			  <Steel>50</Steel>
			  <ComponentIndustrial>2</ComponentIndustrial>
			  <VMEu_Lead>20</VMEu_Lead>
			</costList>
		</value>
	</Operation>
	
	<!-- ============================================== PRE-ELECTRICITY BUILDINGS USE IRON INSTEAD OF STEEL ============================================== -->
