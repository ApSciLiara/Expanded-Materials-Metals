<!-- Make Rock Powder -->
	<RecipeDef>
    <defName>VMEu_MakeRockPowder</defName>
    <label>make rock powder</label>
    <description>Ground stones to make rock powder, an useful material resistant to fire used commonly to build cheap walls and floors.</description>
    <jobString>Grounding rocks into rock powder.</jobString>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <workAmount>1000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<recipeUsers>
		<li>TableStonecutter</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <VMEu_RockPowder>50</VMEu_RockPowder>
    </products>
	<researchPrerequisite>Stonecutting</researchPrerequisite>
  </RecipeDef>
  
