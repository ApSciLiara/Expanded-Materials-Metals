<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Coal -->
  <ThingDef ParentName="ResourceBase">
    <defName>VMEu_Coal</defName>
    <label>coal</label>
    <description>A combustible black rock. Coal is mostly carbon with variable amounts of other elements. Generally used as fuel or as an ingredient in alloys, mainly steel.</description>
    <graphicData>
      <texPath>Things/Item/Resource/VMEu_Coal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>ChunkRock_Drop</soundInteract>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <useHitPoints>true</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
	  <MaxHitPoints>80</MaxHitPoints>
	  <Flammability>0.8</Flammability>
      <MarketValue>1.1</MarketValue>
      <Mass>0.008</Mass>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>5</deepCommonality>
    <deepCountPerPortion>50</deepCountPerPortion>
    <deepLumpSizeRange>20~30</deepLumpSizeRange>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>false</smeltable>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <modExtensions>
      <li Class="ExpandedMaterials.ThingDefExtension">
        <fuelPower>1.5</fuelPower>
      </li>
    </modExtensions>
  </ThingDef>
  
